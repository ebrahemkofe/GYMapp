<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
<ImageView
    android:id="@+id/home_item_IV"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    />
    <TextView
        android:layout_below="@+id/home_item_IV"
        android:id="@+id/home_item_TitleTV"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/home_item_TitleTV"
        android:id="@+id/home_item_DesTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_below="@+id/home_item_DesTV"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="32dp">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/ic_like"/>
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/ic_share"/>
    </LinearLayout>
</RelativeLayout>