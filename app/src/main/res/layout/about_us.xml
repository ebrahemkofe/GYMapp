<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202020"
    android:orientation="vertical"
    tools:context=".Activity.AboutUS">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_weight="2.5"
    android:layout_gravity="center"
    android:gravity="center"

    android:orientation="vertical"
    android:layout_height="0dp">
    <ImageView
        android:layout_width="175dp"
        android:src="@drawable/logo"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="TRANSFORMERS"
        android:textSize="21sp"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="FITNESS CENTER"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#cd0c04"
        android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="2.5"
        android:gravity="center"

        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="0dp">
        <TextView
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="21sp"
            android:text="@string/aboutus"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:layout_height="0dp">

        <TextView
            android:layout_width="match_parent"
            android:text="Contact Us"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="#cd0c04"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.57"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_height="0dp">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
             <de.hdodenhof.circleimageview.CircleImageView
                 android:id="@+id/face"
                 android:layout_width="50dp"
                 android:src="@drawable/facebook"
                 android:layout_height="50dp"
        />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/twitter"

                android:layout_width="50dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/twiter"
                android:layout_height="50dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/insta"

                android:layout_width="50dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/instgram"
                android:layout_height="50dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
                android:id="@+id/snap"
            android:layout_marginLeft="10dp"
            android:src="@drawable/snabshat"
            android:layout_height="wrap_content"/>
            <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
                android:id="@+id/whats"

            android:layout_marginLeft="10dp"
            android:src="@drawable/whattsapp"
            android:layout_height="50dp" />
        </LinearLayout>



    </LinearLayout>



</LinearLayout>


