<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginBottom="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/back_btn_shape"
    >


    <ImageView
        android:id="@+id/image_of_work_out"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/splash"
        android:layout_margin="5dp"


        />

    <Button
        android:background="@drawable/back_btn_shape"
        android:id="@+id/button_of_work_out"
        android:layout_width="80dp"
        android:textColor="#fff"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
       android:layout_marginBottom="10dp"
       android:textAllCaps="false"
        android:text="Lets go"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp" />
    <LinearLayout
        android:layout_margin="5dp"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:background="#000"
        android:alpha="0.8"
        android:layout_width="190dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_day_of_work_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:text="Sunday"
            android:textColor="#CD0C04"
            />
        <TextView
            android:id="@+id/text_exercise_of_work_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#FFF"
            android:text="Exercise arm"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_time_of_work_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#FFF"
                android:text="15"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#FFF"
                android:layout_marginLeft="5dp"
                android:text="minutes"
                />




        </LinearLayout>




    </LinearLayout>



</RelativeLayout>