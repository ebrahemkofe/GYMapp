<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/profile_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="Fragments.Profile_fragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_photo"
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#00000000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
             />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/edit_profile_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/profile_photo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_add_circle_black_24dp" />



        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/profile_photo"
            android:layout_marginTop="5dp"
            android:text="Michael Asaad"
            android:textColor="@color/red"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/user_name"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="80dp"
            android:text="Triner"
            android:textColor="#fff"
            android:textSize="12sp"
            />

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/job_title"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/data_button_click"
                android:layout_width="match_parent"
                android:background="#ffc9000c"
                android:layout_height="3dp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#AFACAC"
            android:layout_below="@+id/buttons"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:layout_marginBottom="0.5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Email"
                    android:gravity="left"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:layout_margin="10dp"
                    android:text="michaelasaad"
                    android:textColor="#fff"
                    android:gravity="right"
                    android:layout_gravity="right|center"
                    android:textSize="15sp" />

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:gravity="center"
                android:layout_marginBottom="0.5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Phone"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:text="02 10235478"
                    android:textColor="#fff"
                    android:textSize="15sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/background"
                android:layout_marginBottom="0.5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Workout"
                    android:textSize="15sp"
                    android:textColor="@color/red"
                    android:layout_margin="10dp"
                    />

                <TextView
                    android:id="@+id/workout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:layout_margin="10dp"
                    android:text="Every day"
                    android:gravity="right"
                    android:textColor="#fff"
                    android:textSize="15sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/background"
                android:layout_marginBottom="0.5dp"

                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Captain"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    />

                <TextView
                    android:id="@+id/Captain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:text="Ahmed El Komy"
                    android:textColor="#fff"
                    android:textSize="15sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/background"
                android:layout_marginBottom="0.5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gym"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    />

                <TextView
                    android:id="@+id/mobile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:text="Transforman Gym"
                    android:textColor="#fff"
                    android:textSize="15sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#fff">
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>